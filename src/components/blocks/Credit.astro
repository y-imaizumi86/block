---
// src/components/blocks/Credit.astro

import Card from '../ui/Card.astro';
import Logo from '../ui/Logo.astro';

interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<Card class:list={['credit', className]}>
  <div class="credit__inner">
    <div class="credit__main">
      <Logo class="credit__icon" />
      <div class="credit__info u-en">
        <p class="credit__copy">&copy; 2026 BLOCK.</p>
      </div>
    </div>

    <div class="credit__meta u-en">
      <span class="credit__tag">v1.0.0</span>
      <span class="credit__tag">Built With Astro</span>
    </div>
  </div>
</Card>

<style lang="scss">
  @use '@/styles/config' as *;

  @layer component {
    :global(.credit) {
      &.c-card {
        padding-block: 20px;
        padding-inline: 20px;
        background-color: #f5f5f5;
      }
    }

    :global(.credit__icon) {
      font-size: rem(20);
      color: rgba($color-text, 0.4);
    }

    .credit {
      &__inner {
        display: flex;
        column-gap: 12px;
        align-items: end;
        justify-content: end;
        height: 100%;

        @include mq('md') {
          column-gap: 16px;
        }
      }

      &__main {
        display: flex;
        column-gap: 12px;
        align-items: center;
      }

      &__name {
        font-size: rem(14);
        font-weight: 700;
        line-height: 1.2;
      }

      &__copy {
        font-size: rem(12);
        font-weight: 600;
        color: rgba($color-text, 0.6);
      }

      &__meta {
        display: flex;
        column-gap: 8px;
        align-items: center;
      }

      &__tag {
        padding-block: 3px;
        padding-inline: 6px;
        font-size: rem(10);
        font-weight: 600;
        color: rgba($color-text, 0.4);
        white-space: nowrap;
        background-color: rgba($color-text, 0.05);
        border: solid 1px rgba($color-text, 0.05);
        border-radius: $radius-sm;
      }
    }
  }
</style>
