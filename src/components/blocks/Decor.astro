---
// src/components/blocks/Decor.astro

import Card from '../ui/Card.astro';

interface Props {
  label?: string;
  class?: string;
}

const { label, class: className } = Astro.props;
---

<Card class:list={['decor', className]}>
  <div class="decor__pattern"></div>
  <span class="decor__label u-en">{label}</span>
</Card>

<style lang="scss">
  @use '@/styles/config' as *;

  @layer component {
    :global(.decor) {
      &.c-card {
        position: relative;
        overflow: hidden;
        background-color: #fafafa;
        border: none;
      }
    }

    .decor {
      &__pattern {
        position: absolute;
        inset: 0;
        width: 100%;
        height: 100%;
        background-image:
          linear-gradient($color-border 1px, transparent 1px),
          linear-gradient(90deg, $color-border 1px, transparent 1px);
        background-size: 20px 20px;
        opacity: 0.4;
        mask-image: radial-gradient(circle at center, black 40%, transparent 100%);
      }

      &__label {
        position: absolute;
        right: 16px;
        bottom: 16px;
        font-size: rem(10);
        font-weight: 600;
        color: rgba($color-text, 0.3);
        letter-spacing: 0.05em;
      }
    }
  }
</style>
