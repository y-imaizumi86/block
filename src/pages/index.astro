---
// src/pages/index.astro

import Hero from '@/components/blocks/Hero.astro';
import Layout from '@/layouts/Layout.astro';
import Work from '@/components/blocks/Work.astro';
import Github from '@/components/blocks/Github.astro';
import Tech from '@/components/blocks/Tech.astro';
import Philosophy from '@/components/blocks/Philosophy.astro';
import About from '@/components/blocks/About.astro';
import Decor from '@/components/blocks/Decor.astro';
import Credit from '@/components/blocks/Credit.astro';
---

<Layout title="Top" description="YUTA IMAIZUMI - Markup Engineer Portfolio">
  <main class="main">
    <div class="main__inner">
      <Hero />

      <Work
        title="Life Cafe"
        description="FPである奥さんの個人メディア兼ライフプランシミュレーションツール。Astro v5をベースに、計算ロジックとグラフ描画にはReactとChart.jsを採用。静的コンテンツの高速性と、React Hook Formによる堅牢なシミュレーション機能を統合。"
        tags={['Astro', 'React', 'MicroCMS', 'Chart.js']}
        themeColor="#fe6019"
        pattern="dot"
        href="https://i-kinako.com/"
        class="u-span-2 u-row-2"
      />

      <Work
        title="FLOW"
        description="カテゴリ別の支出管理に特化した家計簿アプリ。Drag & Dropによるカテゴリの並び替えや、PWAによるネイティブアプリに近い操作感を実現。Cloudflare D1をバックエンドに採用。"
        tags={['Astro', 'React', 'Cloudflare D1', 'PWA']}
        themeColor="#0d9488"
        pattern="dot"
        href="https://github.com/y-imaizumi86/flow"
        class="u-span-2 u-row-2"
      />

      <Tech />

      <About />

      <Philosophy />

      <Work
        title="MERGE"
        description="Vue 3 + Nuxt 4で構築した2048パズルゲーム。Composableによるシングルトンの状態管理、VueUseによるスワイプ操作、localStorageによるゲーム状態の永続化を実装。PWA対応。"
        tags={['Nuxt', 'Vue 3', 'Tailwind CSS', 'PWA']}
        themeColor="#edc22e"
        pattern="grid"
        href="https://merge.i-kinako.com"
        class="u-span-2 u-row-2"
      />

      <Work
        title="MONO"
        description="夫婦2人用のミニマルな買い物リストアプリ。Cloudflare Zero Trustによる認証で、アプリコードから認証ロジックを完全に排除。"
        tags={['Astro', 'React', 'Cloudflare D1', 'Zero Trust']}
        themeColor="#202020"
        pattern="grid"
        href="https://github.com/y-imaizumi86/mono"
        class="u-span-2 u-row-2"
      />

      <Github href="https://github.com/y-imaizumi86" />

      <Decor class="u-pc-only" />

      <Credit class="u-span-2 u-span-4-md" />
    </div>
  </main>
</Layout>

<style lang="scss">
  @use '@/styles/config' as *;

  @layer layout {
    .main {
      &__inner {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        grid-auto-rows: minmax(160px, auto);
        grid-auto-flow: dense;
        row-gap: 16px;
        column-gap: 16px;
        max-width: 1200px;
        min-height: 100dvh;
        padding: 16px;
        margin-inline: auto;

        @include mq('md') {
          grid-template-rows: auto;
          grid-template-columns: repeat(4, 1fr);
          grid-auto-rows: 240px;
          row-gap: 24px;
          column-gap: 24px;
          align-content: center;
          padding: 40px;
        }
      }
    }
  }
</style>
