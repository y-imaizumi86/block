---
// src/pages/index.astro

import Hero from '@/components/blocks/Hero.astro';
import Layout from '@/layouts/Layout.astro';
import Work from '@/components/blocks/Work.astro';
import Github from '@/components/blocks/Github.astro';
import Tech from '@/components/blocks/Tech.astro';
import Philosophy from '@/components/blocks/Philosophy.astro';
import About from '@/components/blocks/About.astro';
import Decor from '@/components/blocks/Decor.astro';
import Credit from '@/components/blocks/Credit.astro';
---

<Layout title="Top" description="YUTA IMAIZUMI - Markup Engineer Portfolio">
  <main class="main">
    <div class="main__inner">
      <Hero />
      <Work
        title="LABS Infrastructure"
        description="「システムアーキテクチャとしての建設」をテーマにした、架空の建設会社のコンセプトサイト。AstroとAlpine.jsを選定し、装飾を削ぎ落としたGray Boxingデザインと高パフォーマンスな実装を両立。"
        tags={['Astro', 'Alpine.js', 'SCSS', 'Design Concept']}
        themeColor="#1e293b"
        pattern="grid"
        href="https://labs-infra.i-kinako.com"
      />
      <Work
        title="Life Cafe"
        description="FPである妻の個人メディア兼ライフプランシミュレーションツール。Astro v5をベースに、計算ロジックとグラフ描画にはReactとChart.jsを採用。静的コンテンツの高速性と、React Hook Formによる堅牢なシミュレーション機能を統合。"
        tags={['Astro', 'React', 'MicroCMS', 'Chart.js']}
        themeColor="#fe6019"
        pattern="dot"
        href="https://i-kinako.com/"
      />
      <Work
        title="MONO"
        description="スピードとシンプルさを追求した、夫婦2人での利用に特化したミニマルな買い物リストアプリ。Cloudflare Access (Zero Trust) を認証に利用し、アプリコードから認証ロジックを排除する「User-Land」最適化を実現。"
        tags={['Astro', 'React', 'Cloudflare D1', 'Zero Trust']}
        themeColor="#202020"
        pattern="grid"
        href="https://github.com/y-imaizumi86/mono"
      />
      <Tech />
      <Philosophy />
      <About />
      <Decor />
      <Github href="https://github.com/y-imaizumi86" />
      <Decor />
      <Credit class="u-span-2 u-span-3-md" />
    </div>
  </main>
</Layout>

<style lang="scss">
  @use '@/styles/config' as *;

  @layer layout {
    .main {
      &__inner {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        grid-auto-rows: minmax(160px, auto);
        grid-auto-flow: dense;
        row-gap: 16px;
        column-gap: 16px;
        max-width: 1200px;
        min-height: 100dvh;
        padding: 16px;
        margin-inline: auto;

        @include mq('md') {
          grid-template-rows: auto;
          grid-template-columns: repeat(4, 1fr);
          grid-auto-rows: 240px;
          row-gap: 24px;
          column-gap: 24px;
          align-content: center;
          padding: 40px;
        }
      }
    }
  }
</style>
